<div>
  <% if flash[:alert] %>
    <div class="alert alert-danger"> <%= flash[:alert] %> </div>
  <% end %>
  <% if flash[:warning] %>
    <div class="alert alert-warning"> <%= flash[:warning] %> </div>
  <% end %>
  <% if flash[:success] %>
    <div class="alert alert-success"> <%= flash[:success] %> </div>
  <% end %>
</div>